---
const { title, pf, hrf, span } = Astro.props

interface Props {
  title: string
  pf: string
  hrf: string
  span: string
}
---

<div>
  <div
    class="flex items-center text-sm font-semibold leading-6 text-green-700 dark:text-green-400"
  >
    <svg viewBox="0 0 4 4" class="mr-4 h-1 w-1 flex-none" aria-hidden="true">
      <circle cx="2" cy="2" r="2" fill="currentColor"></circle>
    </svg>
    {title}
    <div
      class="absolute -ml-2 h-px w-screen -translate-x-full bg-gray-500/80 sm:-ml-4 lg:static lg:-mr-6 lg:ml-8 lg:w-auto lg:flex-auto lg:translate-x-0"
      aria-hidden="true"
    >
    </div>
  </div>
  <a
    class="hover:text-gray-600 dark:hover:text-gray-400 mt-1 text-base leading-7 text-gray-900 dark:text-gray-200"
    target="_blank"
    href={hrf}
  >
    <p class="text-sm">{pf}</p>
    <div class="flex mb-4 mt-4">
      <svg width="28" height="28" viewBox="0 0 24 24"
        ><g fill="none"
          ><path
            d="M24 0v24H0V0zM12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035c-.01-.004-.019-.001-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427c-.002-.01-.009-.017-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093c.012.004.023 0 .029-.008l.004-.014l-.034-.614c-.003-.012-.01-.02-.02-.022m-.715.002a.023.023 0 0 0-.027.006l-.006.014l-.034.614c0 .012.007.02.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z"
          ></path><path
            fill="currentColor"
            d="M13.5 21.888C18.311 21.164 22 17.013 22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 5.013 3.689 9.165 8.5 9.888V15H9a1.5 1.5 0 0 1 0-3h1.5v-2A3.5 3.5 0 0 1 14 6.5h.5a1.5 1.5 0 0 1 0 3H14a.5.5 0 0 0-.5.5v2H15a1.5 1.5 0 0 1 0 3h-1.5z"
          ></path></g
        ></svg
      >
      <div class="ml-2 mt-0.5">
        <span
          class="block font-medium text-base leading-snug text-black dark:text-gray-200"
          >{span}
        </span>
      </div>
    </div>
  </a>
</div>
