---
interface Props {
  checkActive?: boolean
  href: string
  class?: string
}

const {
  href,
  class: className,
  checkActive = true,
  ...restOfProps
} = Astro.props

const currentPath = Astro.url.pathname
console.log("currem path", currentPath)

const destination = href

const isActive = currentPath === destination && checkActive
console.log("si es igual", isActive)
---

<a
  href={destination}
  class:list={[
    className,
    "border-b-2 dark:text-yellow-300",
    isActive ? "border-green-700" : "border-transparent",
  ]}
  {...restOfProps}
>
  <slot />
</a>
