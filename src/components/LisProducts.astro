---
const { img, title, pf } = Astro.props

interface Props {
  img: string
  title: string
  pf: string
}
---

<div class="mt-8 flex gap-4 md:items-center">
  <div class="w-12 mt-4 h-12 flex gap-4 rounded-full">
    <img
      src={img}
      alt="productos"
      loading="lazy"
      class="w-full h-full rounded-full object-cover"
    />
  </div>
  <div class="w-5/6">
    <h3 class="font-semibold text-lg pt-4 text-gray-700 dark:text-gray-200">
      {title}
    </h3>
    <p class="text-gray-500 pt-2">
      {pf}
    </p>
  </div>
</div>
