---
const { img, title, pf } = Astro.props
---

<li class="p-5 text-center">
  <div class="flex flex-col items-center">
    <div class="flex-shrink-0 relative top-0 -mt-16">
      <div
        class="flex items-center justify-center h-20 w-20 rounded-full text-white border-4 dark:shadow-gray-600 dark:shadow-2xl border-yellow-600 text-xl font-semibold"
      >
        <img class="rounded-full object-cover" src={img} alt="iso" />
      </div>
    </div>
    <div class="mt-4 mb-8">
      <h4
        class="text-lg leading-6 font-semibold text-gray-600 dark:text-gray-300"
      >
        {title}
      </h4>
      <p class="mt-2 text-base leading-6 text-gray-400">{pf}</p>
    </div>
  </div>
</li>
